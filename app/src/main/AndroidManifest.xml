<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.com.healthylifestyle.healthylifestyle" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="AA_DB_NAME"
            android:value="healthyLifestyle.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MealMenuActivity"
            android:label="@string/title_activity_meal_menu" >
        </activity>
        <activity
            android:name=".TargetActivity"
            android:label="@string/title_activity_target"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
            <!-- TODO investigate how to add the same menu as in ActionBarActivity -->
        </activity>
    </application>

</manifest>
